<Window x:Class="beermusic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:beermusic"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="670" Closing="Window_Closing">
    <Grid Background="#FF2F2F34">
        <Label x:Name="labelStatus" Content="Info..." HorizontalAlignment="Left" Margin="0,393,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Label x:Name="musicName" Content="Label" HorizontalAlignment="Left" Margin="247,10,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Global User Interface" FontSize="36">
            <Label.Effect>
                <DropShadowEffect/>
            </Label.Effect>
        </Label>
        <Button x:Name="pausePlay" Content="Pause // Play" HorizontalAlignment="Left" Margin="541,382,0,0" VerticalAlignment="Top" Width="111" Background="#FF5D5D6A" Foreground="#FF80FF00" Height="27" FontSize="18" Click="pausePlay_Click"/>
        <Image x:Name="albumArt" HorizontalAlignment="Left" Height="232" Margin="10,10,0,0" VerticalAlignment="Top" Width="232"/>
        <Label x:Name="artistNameLabel" Content="Label" HorizontalAlignment="Left" Margin="247,68,0,0" VerticalAlignment="Top" Foreground="#FFD4D4D4" FontSize="20"/>

    </Grid>
</Window>
